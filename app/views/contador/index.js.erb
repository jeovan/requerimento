<% recurso = 'contador' %>

$('#table_<%= recurso%>').html(' <%= escape_javascript(render "#{recurso}/table_#{recurso}") %> ')
$('#modal_<%= recurso%>').find('input[name="data-input"]').val('<%= @input_id%>')
$('#modal_<%= recurso%>').modal('show');

$(document).on('click', '.btn-<%= recurso%>',function(){
  var id = `#${ $(this).attr('data-input') }`
  var valor = `${ $(this).attr('data-valor') }`

  var crc = `${ $(this).attr('data-crc') }`
  var nome = `${ $(this).attr('data-nome') }`

  $(id).val(valor)

  $('#requerimento_crc').val(crc)
  $('#requerimento_nome_contador').val(nome)



  $('#modal_<%= recurso%>').modal('hide')
})