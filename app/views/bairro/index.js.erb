$('#table_bairro').html(' <%= escape_javascript(render "bairro/table_bairro") %> ')
$('#modal_bairro').find('input[name="data-input"]').val('<%= @input_id%>')
$('#modal_bairro').modal('show');

$(document).on('click', '.btn-bairro',function(){
  var id = `#${ $(this).attr('data-input') }`
  var valor = `${ $(this).attr('data-valor') }`
  $(id).val(valor)
  $('#modal_bairro').modal('hide')
})